<%- include('partials/header.ejs')%>

<body>   
    <%- include('partials/navbar')%>
    <div class="container">

        <hr>
        <h1><%=id.title%></h1>
        <p><%=id.description%></p>
        <hr>
        


        <form method="POST" class="form-control" action="/response">
            <h3>Responda</h3>
            <textarea placeholder="Digite sua resposta" class="form-control" name="answerbody" cols="30" rows="10"></textarea>
            <br><button type="submit" class="btn btn-primary">Responder</button>
            <input type="hidden" name="idquestion" value="<%=id.id%>">
        </form>
        <hr>
        <%question.forEach((question)=>{%>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= question.body %>  </p>
                    <form method="POST" action="/deletenote">
                        <button class="btn btn-danger">Deletar</button>
                        <input type="hidden" value="<%=question.id%>" name="idnote">
                        <input type="hidden" name="toidquestion" value="<%=id.id%>">
                    </form>

                </div>
            </div>
        <%})%>

    </div>
</body>

<%- include('partials/footer.ejs')%>
