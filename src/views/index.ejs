<%- include('partials/header.ejs')%>

<body>   
    <%- include('partials/navbar')%>

    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/toask" class="btn btn-primary">Perguntar</a><hr>
        <% ask.forEach((ask)=>{ %>
            <br> <div class="card">
                <div class="card-body">
                    <h3><%=  ask.title%></h3> 
                 </div>
                 <div class="card-footer">
                    <a href="/viewask/<%= ask.id %>"><button class="btn btn-primary">Responder</button></a> 
                    <form  class="d-inline" method="POST" action="/destroyask">
                        <input type="hidden" name="idinput" value="<%=ask.id%>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                 </div>
            </div>
            <br>
            
        <%})%>

    </div>
</body>

<%- include('partials/footer.ejs')%>

